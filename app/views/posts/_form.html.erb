<%- model_class = Post -%>
<%= form_for @post, :html => { class: "form-horizontal post", style: "margin-top: 10px;" } do |f| %>
  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="container">
    <div class="form-group">
      <div class="row">
        <div class="col-sm-7">
          <%= f.label :titulo, :class => 'control-label' %>
          <%= f.text_field :titulo, :class => 'form-control' %>
          <%#=f.error_span(:titulo) %>
        </div>
        <div class="col-sm-7">
          <%= f.label :subtitulo, :class => 'control-label' %>
          <%= f.text_field :subtitulo, :class => 'form-control' %>
          <%#=f.error_span(:titulo) %>
        </div>
        <div class="col-sm-7">
          <%= f.label :img_titulo, :class => 'control-label' %>
          <%= f.text_field :img_titulo, :class => 'form-control' %>
          <%#=f.error_span(:titulo) %>
        </div>
        <div class="col-sm-7">
          <%#= f.label :texto, :class => 'control-label' %>
          <%= f.cktext_area :texto, :class => 'form_control', :ckeditor => {:toolbar => 'Full'} %>
          <%#=f.error_span(:texto) %>
          <%#= f.input :texto, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} } %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-5">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to "Cancelar", posts_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
